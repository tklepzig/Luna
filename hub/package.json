{
  "name": "luna",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist/",
    "server-transpile": "babel server --out-dir dist/server --source-maps inline",
    "client-transpile": "babel public --out-dir dist/public --source-maps inline",
    "client-bundle": "browserify dist/public/app.js -o dist/public/bundle.js",
    "client-static": "cp public/index.html dist/public/",
    "scss": "node-sass public/app.scss dist/public/app.css --output-style compressed --source-map-embed",
    "prebuild": "npm run clean",
    "build": "npm run server-transpile && npm run client-transpile && npm run client-bundle && npm run client-static && npm run scss",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "express": "~4.13.3",
    "socket.io": "~1.3.7"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "browserify": "^14.0.0",
    "eslint": "^3.15.0",
    "eslint-plugin-react": "^6.10.0",
    "node-sass": "^4.5.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "socket.io-client": "^1.7.3"
  }
}
